</div>

@code {
    @code {
        private bool collapseNavMenu = true;
        private bool serviciosDesplegado = false;
        private bool serviciosDesplegado2 = false;

        private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

        private void ToggleNavMenu()
        {
            collapseNavMenu = !collapseNavMenu;
        }

        private void ToggleServicios()
        {
            serviciosDesplegado = !serviciosDesplegado;
        }

        private void ToggleServicios2()
        {
            serviciosDesplegado2 = !serviciosDesplegado2;
        }
    }

}





